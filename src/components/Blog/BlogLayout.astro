---
interface Props {
  title: string;
  desc: string;
  date: Date;
  imageUrl: string;
}
import Blogs from "@components/Blog/Blogs.astro";
import "@styles/blogs/style.css";
import "@fontsource/jetbrains-mono";
import "@fontsource/space-mono";
import "@fontsource/dm-mono";
import "@styles/fonts/IosevkaEtoile.css";
const { title, desc, imageUrl } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Lel Illumina" />
    <meta name="color-scheme" content="dark" />
    <meta name="theme-color" content="#83C092" />
    <meta property="og:image" content=`https://lel.nekoweb.org/${imageUrl}` />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content=`https://lel.nekoweb.org/blog/${title}` />
    <meta property="og:description" content={desc} />
    <meta property="og:site_name" content="Lel" />
    <meta name="twitter:card" content="summary_large_image" />

    <meta name="description" content={desc} />
    <link rel="icon" type="image/x-icon" href="/images/neicon_arc.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- <ClientRouter /> -->
  </head>
  <body>
    <section
      id="mainText"
      style="margin: 45px 0 20px"
      transition:animate="fade"
    >
      <slot />
    </section>
    <Blogs />
    <!-- accept props on this component and bass to above -->
  </body>
</html>
