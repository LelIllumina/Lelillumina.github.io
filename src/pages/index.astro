---
interface props {
  accent: string;
  desc: string;
  imageAlt: string;
  imageHeight: number;
  imageUrl: string;
  imageWidth: number;
  keywords: string;
  title: string;
}
import Outer from "@layouts/Outer.astro";
import "@fontsource/dm-mono";
import { Image } from "astro:assets";
import thing from "@assets/images/mainPage/thing.png";

const props = {
  accent: "#cba6f7",
  desc: "Warning Page before entering",
  imageAlt: "Thing idk",
  imageHeight: 1080,
  imageUrl: "/images/opengraph/thing.png",
  imageWidth: 1920,
  keywords: "lel, nekoweb, website, info",
  title: "Before you enter...",
};
---

<Outer {...props}>
  <div id="hero">
    <div id="innards">
      <Image src={thing} alt="bg" height="300" loading="eager" />
      <h1>Welcome to lel@nekoweb!</h1><p>
        Before you enter be warned that this site <em>WILL</em> contain <strong
          >NSFW</strong
        > content.
      </p>
      <a href="./main/">Enter...</a>
    </div>
  </div>

  <style>
    :root {
      color-scheme: dark;
    }

    html,
    body {
      width: 100vw;
      height: 100vh;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      font-family: "DM Mono", monospace;
      color: #bebebe;
      background-color: #141414;
    }

    #hero {
      width: 50%;
      margin: auto;
      border: 2px solid #4b4b4b;
    }

    #hero::before {
      content: "Hello there";

      position: relative;
      top: -10px;
      right: -10px;

      overflow: visible;

      padding: 5px;

      color: #4b4b4b;

      background-color: #141414;
    }

    #innards {
      display: flex;
      flex-direction: column;

      margin: auto;
      margin: 0;
      padding: 20px 100px;

      text-align: center;
    }

    img {
      width: 100%;
      height: auto;
      margin: auto;
    }
  </style>
</Outer>
